	public static int evenOddPartition(int[] data) {
	    int i = 0, j = data.length - 1;
	    do {
	        while (i <= j && (data[i] & 1) == 0) { i++; }
	        while (i <= j && (data[j] & 1) != 0) { j--; }
	if (i >= j) {
	            return i;
	        }
	        int swap = data[i];
	        data[i] = data[j];
	        data[j] = swap;
	    } while (true);
	}

}
