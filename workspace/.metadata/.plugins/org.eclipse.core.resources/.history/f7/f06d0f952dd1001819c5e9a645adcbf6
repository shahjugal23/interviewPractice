package com.jar.implementation;

public class SumInSingleDigit {

	public static void main(String[] args) {
		int n =12345;
		int sum =0;
		while(n!=0 || sum>9){
			if(n==0){
				n= sum;
				sum =0;
			}
			int last_digit = n%10;
			sum+= last_digit;
			n=n/10;
		}
		System.out.println("Sum is : "+sum);
	}
}
