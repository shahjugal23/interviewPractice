		String str="aaabbbb";
		String finalo = new String();
		int count=1,i;
		for(i=0;i<str.length()-1;i++){
			if(str.charAt(i)==str.charAt(i+1))
				count++;
			else{
				finalo=finalo+str.charAt(i)+count;
				count=1;
				System.out.println(finalo);
			}
		}
		finalo=finalo+str.charAt(i)+count;
		System.out.println(finalo);
		
